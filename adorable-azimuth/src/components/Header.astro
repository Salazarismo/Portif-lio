---
import Button from "../components/ui/Button.astro";
---
<header id="site-header" class="sticky top-0" style="background: var(--surface-1); box-shadow: var(--elevation-1)" data-z="2">
  <div class="container" style="display:flex; align-items:center; justify-content:space-between; padding-block: var(--spacing-4)">
    <a href="/" data-text="heading-xl" style="color: var(--ink-1)">Portfólio</a>
    <nav aria-label="Navegação" class="hidden md:block">
      <ul style="display:flex; gap: var(--spacing-4)">
        <li><a href="/#projects" data-text="ui-label">Estudos de Caso</a></li>
        <li><a href="/docs" data-text="ui-label">Docs</a></li>
        <li><a href="#contact" data-text="ui-label">Contato</a></li>
      </ul>
    </nav>
    <div class="hidden md:inline-block">
      <Button as="a" href="#contact" variant="primary">Fale comigo</Button>
    </div>
    <details class="md:hidden">
      <summary class="p-3" aria-controls="mobile-menu-panel" style="list-style:none; cursor:pointer">
        <span class="sr-only">Abrir menu</span>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <rect x="3" y="6" width="18" height="2" rx="1" fill="currentColor" />
          <rect x="3" y="11" width="18" height="2" rx="1" fill="currentColor" />
          <rect x="3" y="16" width="18" height="2" rx="1" fill="currentColor" />
        </svg>
      </summary>
      <div id="mobile-menu-panel" style="background: var(--surface-1); box-shadow: var(--elevation-1)">
        <div class="container" style="padding-block: var(--spacing-3)">
          <ul style="display:grid; gap: var(--spacing-3)">
            <li><a href="/#projects" data-text="ui-label">Estudos de Caso</a></li>
            <li><a href="/docs" data-text="ui-label">Docs</a></li>
            <li><a href="#contact" data-text="ui-label">Contato</a></li>
            <li><Button as="a" href="#contact" variant="primary">Fale comigo</Button></li>
          </ul>
        </div>
      </div>
    </details>
  </div>
  <style>
    header details[open] summary {outline: none}
  </style>
</header>
