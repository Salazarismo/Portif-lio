---
interface Props {
  id: string;
  title: string;
  type: 'informacional' | 'demonstracao' | 'conversao';
  objective: string;
  action: string;
  completion: string;
  tone?: 'default' | 'alt';
  metaLine?: string;
}
const { id, title, type, objective, action, completion, tone = 'default', metaLine } = Astro.props as Props;
const toneStyle = tone === 'alt' ? 'background: var(--surface-2)' : '';
---
<section id={id} aria-labelledby={`${id}-title`} class="px-4 py-6" data-section data-section-type={type} data-objective={objective} data-action={action} data-completion={completion} data-tone={tone} style={toneStyle}>
  <div class="container">
    <h2 id={`${id}-title`} data-text="heading-2xl" style="font-family: var(--font-family-sans)">{title}</h2>
    {metaLine && (
      <p class="mt-1" data-text="ui-helper" style="max-width: 65ch">{metaLine}</p>
    )}
    <slot />
  </div>
</section>
