---
interface Props {
  id: string;
  name: string;
  type?: 'text' | 'email' | 'password' | 'number' | 'search' | 'tel' | 'url' | 'date' | 'time';
  placeholder?: string;
  disabled?: boolean;
  state?: 'default' | 'error' | 'success';
}
const { id, name, type = 'text', placeholder = '', disabled = false, state = 'default' } = Astro.props as Props;
---
<input id={id} name={name} type={type} placeholder={placeholder} disabled={disabled} aria-disabled={disabled ? 'true' : 'false'} aria-invalid={state === 'error' ? 'true' : 'false'} data-state={state} class="ui-input" />
