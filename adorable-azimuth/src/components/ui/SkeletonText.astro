---
interface Props { lines?: number }
const { lines = 3 } = Astro.props as Props;
const items = Array.from({ length: lines });
---
<div style="display:grid; gap: var(--spacing-2)">
  {items.map(() => (
    <div data-skeleton style="border-radius: var(--radius-sm); height: var(--spacing-2); width: 100%"></div>
  ))}
</div>
