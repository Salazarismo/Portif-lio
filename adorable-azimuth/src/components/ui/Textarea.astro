---
interface Props {
  id: string;
  name: string;
  rows?: number;
  placeholder?: string;
  disabled?: boolean;
  state?: 'default' | 'error' | 'success';
}
const { id, name, rows = 4, placeholder = '', disabled = false, state = 'default' } = Astro.props as Props;
---
<textarea id={id} name={name} rows={rows} placeholder={placeholder} disabled={disabled} aria-disabled={disabled ? 'true' : 'false'} aria-invalid={state === 'error' ? 'true' : 'false'} data-state={state} class="ui-textarea" />
