---
import BaseLayout from "@/components/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Divider from "@/components/ui/Divider.astro";
import { AspectRatioImage } from "@/components/ui/AspectRatioImage";
import { createT, loadMessages, type Locale } from "@/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";
export const prerender = false;

const pathname = Astro.url.pathname;
const locale = (Astro.currentLocale || (pathname.startsWith("/en") ? "en" : "pt-br")) as Locale;
const tCommon = createT(loadMessages(locale, "common"), { locale, namespace: "common" });
const tProjects = createT(loadMessages(locale, "projects"), { locale, namespace: "projects" });
const tP3 = createT(loadMessages(locale, "project_p3"), { locale, namespace: "project_p3" });
---
<BaseLayout title={tP3("project_p3.meta.title")} description={tP3("project_p3.meta.description")}>
  <Fragment slot="nav"><Header /></Fragment>
  <div class="container">
    <section aria-labelledby="hero-p3">
      <h1 id="hero-p3" data-text="heading-2xl">{tP3("project_p3.hero.title")}</h1>
      <p data-text="body-muted">{tP3("project_p3.hero.subtitle")}</p>
      <p data-text="ui-label">{tP3("project_p3.hero.delivery")}</p>
      <p style="margin-top: var(--space-1)"><span class="nl-badge" data-variant="secondary" data-ladder={tP3("project_p3.hero.ladder")}>{tP3("project_p3.hero.ladder")}</span></p>
      <div class="nl-hero-actions" style="margin-top: var(--space-2)">
        <a class="nl-btn" href="https://github.com/Salazarismo/habit_analyzer" target="_blank" rel="noopener noreferrer">{tCommon("common.cta.repo")}</a>
        <a class="nl-btn" href="https://wa.me/5548984586949" target="_blank" rel="noopener noreferrer">{tCommon("common.cta.contact")}</a>
      </div>
      <div style="margin-top: var(--space-3)">
        <AspectRatioImage
          src="https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fm=jpg&w=1200&q=80"
          alt={tP3("project_p3.hero.image_alt")}
          ratio={16 / 9}
          loading="lazy"
          decoding="async"
        />
      </div>
    </section>
    <Divider />
    <section aria-labelledby="tldr-p3">
      <h2 id="tldr-p3" data-text="heading-xl">{tProjects("projects.sections.tldr")}</h2>
      <div style="display:grid; gap: var(--space-1); margin-top: var(--space-2)">
        <p data-text="body-normal"><strong>{tP3("project_p3.tldr.problem_label")}</strong> {tP3("project_p3.tldr.problem")}</p>
        <p data-text="body-normal"><strong>{tP3("project_p3.tldr.solution_label")}</strong> {tP3("project_p3.tldr.solution")}</p>
        <p data-text="body-normal"><strong>{tP3("project_p3.tldr.result_label")}</strong> {tP3("project_p3.tldr.result")}</p>
      </div>
    </section>
    <Divider />
    <section aria-labelledby="snapshot-p3">
      <h2 id="snapshot-p3" data-text="heading-xl">{tProjects("projects.sections.snapshot")}</h2>
      <div class="grid-12 gap-token-4" style="margin-top: var(--space-2)">
        <div style="grid-column: span 4">
          <div data-text="ui-label">{tProjects("projects.labels.role_scope_time")}</div>
          <p data-text="body-normal">{tP3("project_p3.snapshot.col1")}</p>
        </div>
        <div style="grid-column: span 4">
          <div data-text="ui-label">{tProjects("projects.labels.scale_min")}</div>
          <p data-text="body-normal">{tP3("project_p3.snapshot.col2")}</p>
        </div>
        <div style="grid-column: span 4">
          <div data-text="ui-label">{tProjects("projects.labels.constraints_min")}</div>
          <p data-text="body-normal">{tP3("project_p3.snapshot.col3")}</p>
        </div>
      </div>
    </section>
    <Divider />
    <section aria-labelledby="problem-impact-p3">
      <h2 id="problem-impact-p3" data-text="heading-xl">{tProjects("projects.sections.problem_impact")}</h2>
      <ul class="case-psr">
        <li data-text="body-normal"><strong>{tP3("project_p3.problem_impact.symptoms_label")}</strong> {tP3("project_p3.problem_impact.symptoms")}</li>
        <li data-text="body-normal"><strong>{tP3("project_p3.problem_impact.cause_label")}</strong> {tP3("project_p3.problem_impact.cause")}</li>
        <li data-text="body-normal"><strong>{tP3("project_p3.problem_impact.impact_label")}</strong> {tP3("project_p3.problem_impact.impact")}</li>
      </ul>
    </section>
    <Divider />
    <section aria-labelledby="approach-p3">
      <h2 id="approach-p3" data-text="heading-xl">{tProjects("projects.sections.approach")}</h2>
      <p data-text="body-normal">{tP3("project_p3.approach.intro")}</p>
      <ol class="case-psr">
        <li data-text="body-normal"><strong>{tP3("project_p3.approach.step1_label")}</strong> {tP3("project_p3.approach.step1")}</li>
        <li data-text="body-normal"><strong>{tP3("project_p3.approach.step2_label")}</strong> {tP3("project_p3.approach.step2")}</li>
        <li data-text="body-normal"><strong>{tP3("project_p3.approach.step3_label")}</strong> {tP3("project_p3.approach.step3")}</li>
      </ol>
      <div style="display:grid; gap: var(--space-3); margin-top: var(--space-3)">
        <figure>
          <AspectRatioImage
            src="/images/analytics-code.svg"
            alt={tP3("project_p3.approach.figure1_alt")}
            ratio={2 / 1}
            loading="lazy"
            decoding="async"
          />
          <figcaption data-text="ui-helper" style="margin-top: var(--space-1)">{tP3("project_p3.approach.figure1_caption")}</figcaption>
        </figure>
        <figure>
          <pre class="case-diagram" data-text="body-normal">{tP3("project_p3.approach.diagram")}</pre>
          <figcaption data-text="ui-helper" style="margin-top: var(--space-1)">{tP3("project_p3.approach.figure2_caption")}</figcaption>
        </figure>
      </div>
    </section>
    <Divider />
    <section aria-labelledby="reliability-p3">
      <h2 id="reliability-p3" data-text="heading-xl">{tProjects("projects.sections.reliability")}</h2>
      <div style="display:grid; gap: var(--space-2); margin-top: var(--space-2)">
        <p data-text="body-normal"><strong>{tP3("project_p3.reliability.risks_label")}</strong> {tP3("project_p3.reliability.risks")}</p>
        <p data-text="body-normal"><strong>{tP3("project_p3.reliability.guarantees_label")}</strong> {tP3("project_p3.reliability.guarantees")}</p>
        <p data-text="body-normal"><strong>{tP3("project_p3.reliability.evidence_label")}</strong> {tP3("project_p3.reliability.evidence")}</p>
      </div>
      <pre style="margin-top: var(--space-2)">
<code data-text="body-normal">encoded_jwt = jwt.encode(&#123;**data, "exp": expire&#125;, settings.JWT_SECRET, algorithm=settings.JWT_ALGORITHM)
payload = jwt.decode(token, settings.JWT_SECRET, algorithms=[settings.JWT_ALGORITHM])</code>
      </pre>
      <div style="margin-top: var(--space-2)">
        <a href="https://github.com/Salazarismo/habit_analyzer" target="_blank" rel="noopener noreferrer" data-text="ui-label">{tP3("project_p3.reliability.repo_link")}</a>
      </div>
    </section>
    <Divider />
    <section aria-labelledby="next-p3">
      <h2 id="next-p3" data-text="heading-xl">{tProjects("projects.sections.next")}</h2>
      <ul class="case-psr">
        <li data-text="body-normal">{tP3("project_p3.next.item1")}</li>
        <li data-text="body-normal">{tP3("project_p3.next.item2")}</li>
        <li data-text="body-normal">{tP3("project_p3.next.item3")}</li>
      </ul>
    </section>
    <Divider />
    <section aria-labelledby="conversion-p3">
      <h2 id="conversion-p3" data-text="heading-xl">{tProjects("projects.sections.conversion")}</h2>
      <p data-text="body-normal">{tP3("project_p3.conversion.p")}</p>
      <div class="case-conversion">
        <a class="case-cta" href="https://wa.me/5548984586949" target="_blank" rel="noopener noreferrer">{tP3("project_p3.conversion.whatsapp")}</a>
        <a class="case-cta-secondary" href="https://github.com/Salazarismo/habit_analyzer" target="_blank" rel="noopener noreferrer">{tCommon("common.cta.repo")}</a>
        <a class="case-cta-secondary" href={`${getRelativeLocaleUrl(locale, "")}#projects`}>{tProjects("projects.buttons.back")}</a>
        <a class="case-cta-secondary" href={getRelativeLocaleUrl(locale, "projects/p5")}>{tProjects("projects.buttons.next")}</a>
        <span data-text="ui-helper">{tP3("project_p3.conversion.availability")}</span>
      </div>
    </section>
  </div>
  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
