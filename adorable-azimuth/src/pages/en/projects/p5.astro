---
import BaseLayout from "@/components/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Divider from "@/components/ui/Divider.astro";
import { AspectRatioImage } from "@/components/ui/AspectRatioImage";
import { createT, loadMessages, type Locale } from "@/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";
export const prerender = false;

const pathname = Astro.url.pathname;
const locale = (Astro.currentLocale || (pathname.startsWith("/en") ? "en" : "pt-br")) as Locale;
const tCommon = createT(loadMessages(locale, "common"), { locale, namespace: "common" });
const tProjects = createT(loadMessages(locale, "projects"), { locale, namespace: "projects" });
const tP5 = createT(loadMessages(locale, "project_p5"), { locale, namespace: "project_p5" });
---
<BaseLayout title={tP5("project_p5.meta.title")} description={tP5("project_p5.meta.description")}>
  <Fragment slot="nav"><Header /></Fragment>
  <div class="container">
    <section aria-labelledby="hero-p5">
      <h1 id="hero-p5" data-text="heading-2xl">{tP5("project_p5.hero.title")}</h1>
      <p data-text="body-muted">{tP5("project_p5.hero.subtitle")}</p>
      <p data-text="ui-label">{tP5("project_p5.hero.kpi")}</p>
      <p style="margin-top: var(--space-1)"><span class="nl-badge" data-variant="secondary" data-ladder={tP5("project_p5.hero.ladder")}>{tP5("project_p5.hero.ladder")}</span></p>
      <div class="nl-hero-actions" style="margin-top: var(--space-2)">
        <a class="nl-btn" href="mailto:victor.de.alcantara.bueno@gmail.com?subject=Solicita%C3%A7%C3%A3o%20de%20repo%20%2F%20demo%20(Relatorium)" rel="noopener noreferrer">{tCommon("common.cta.repo")}</a>
        <a class="nl-btn" href="https://wa.me/5548984586949" target="_blank" rel="noopener noreferrer">{tCommon("common.cta.contact")}</a>
      </div>
      <div style="margin-top: var(--space-3)">
        <AspectRatioImage
          src="https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fm=jpg&w=1200&q=80"
          alt={tP5("project_p5.hero.image_alt")}
          ratio={16 / 9}
          loading="lazy"
          decoding="async"
        />
      </div>
    </section>
    <Divider />
    <section aria-labelledby="tldr-p5">
      <h2 id="tldr-p5" data-text="heading-xl">{tProjects("projects.sections.tldr")}</h2>
      <div style="display:grid; gap: var(--space-1); margin-top: var(--space-2)">
        <p data-text="body-normal"><strong>{tP5("project_p5.tldr.problem_label")}</strong> {tP5("project_p5.tldr.problem")}</p>
        <p data-text="body-normal"><strong>{tP5("project_p5.tldr.solution_label")}</strong> {tP5("project_p5.tldr.solution")}</p>
        <p data-text="body-normal"><strong>{tP5("project_p5.tldr.result_label")}</strong> {tP5("project_p5.tldr.result")}</p>
      </div>
      <div style="margin-top: var(--space-2)">
        <span data-text="body-muted">{tP5("project_p5.tldr.note")}</span>
      </div>
    </section>
    <Divider />
    <section aria-labelledby="snapshot-p5">
      <h2 id="snapshot-p5" data-text="heading-xl">{tProjects("projects.sections.snapshot")}</h2>
      <div class="grid-12 gap-token-4" style="margin-top: var(--space-2)">
        <div style="grid-column: span 4">
          <div data-text="ui-label">{tProjects("projects.labels.role_scope_time")}</div>
          <p data-text="body-normal">{tP5("project_p5.snapshot.col1")}</p>
        </div>
        <div style="grid-column: span 4">
          <div data-text="ui-label">{tProjects("projects.labels.scale_min")}</div>
          <p data-text="body-normal">{tP5("project_p5.snapshot.col2")}</p>
        </div>
        <div style="grid-column: span 4">
          <div data-text="ui-label">{tProjects("projects.labels.constraints_min")}</div>
          <p data-text="body-normal">{tP5("project_p5.snapshot.col3")}</p>
        </div>
      </div>
    </section>
    <Divider />
    <section aria-labelledby="problem-impact-p5">
      <h2 id="problem-impact-p5" data-text="heading-xl">{tProjects("projects.sections.problem_impact")}</h2>
      <ul class="case-psr">
        <li data-text="body-normal"><strong>{tP5("project_p5.problem_impact.symptoms_label")}</strong> {tP5("project_p5.problem_impact.symptoms")}</li>
        <li data-text="body-normal"><strong>{tP5("project_p5.problem_impact.cause_label")}</strong> {tP5("project_p5.problem_impact.cause")}</li>
        <li data-text="body-normal"><strong>{tP5("project_p5.problem_impact.impact_label")}</strong> {tP5("project_p5.problem_impact.impact")}</li>
      </ul>
    </section>
    <Divider />
    <section aria-labelledby="approach-p5">
      <h2 id="approach-p5" data-text="heading-xl">{tProjects("projects.sections.approach")}</h2>
      <p data-text="body-normal">{tP5("project_p5.approach.intro")}</p>
      <ol class="case-psr">
        <li data-text="body-normal"><strong>{tP5("project_p5.approach.step1_label")}</strong> {tP5("project_p5.approach.step1")}</li>
        <li data-text="body-normal"><strong>{tP5("project_p5.approach.step2_label")}</strong> {tP5("project_p5.approach.step2")}</li>
        <li data-text="body-normal"><strong>{tP5("project_p5.approach.step3_label")}</strong> {tP5("project_p5.approach.step3")}</li>
      </ol>
    </section>
    <Divider />
    <section aria-labelledby="reliability-p5">
      <h2 id="reliability-p5" data-text="heading-xl">{tProjects("projects.sections.reliability")}</h2>
      <div style="display:grid; gap: var(--space-2); margin-top: var(--space-2)">
        <p data-text="body-normal"><strong>{tP5("project_p5.reliability.risks_label")}</strong> {tP5("project_p5.reliability.risks")}</p>
        <p data-text="body-normal"><strong>{tP5("project_p5.reliability.guarantees_label")}</strong> {tP5("project_p5.reliability.guarantees")}</p>
        <p data-text="body-normal"><strong>{tP5("project_p5.reliability.evidence_label")}</strong> {tP5("project_p5.reliability.evidence")}</p>
      </div>
      <pre style="margin-top: var(--space-2)">
<code data-text="body-normal">Semantics(
  button: true,
  label: 'Nova atividade',
  child: Tooltip(
    message: 'Nova atividade',
    child: QuickActionButton(
      label: 'Nova atividade',
      icon: Icons.event_available,
      semanticsLabel: 'Nova atividade',
      onPressed: () =&gt; context.pushNamed(AppRoutes.newActivity),
    )
  ),
)</code>
      </pre>
      <div class="case-stack" style="margin-top: var(--space-2)">
        <div data-text="ui-label">{tP5("project_p5.stack.title")}</div>
        <div class="case-chips">
          <span class="case-chip">{tP5("project_p5.stack.chip1")}</span>
          <span class="case-chip">{tP5("project_p5.stack.chip2")}</span>
          <span class="case-chip">{tP5("project_p5.stack.chip3")}</span>
          <span class="case-chip">{tP5("project_p5.stack.chip4")}</span>
        </div>
      </div>
    </section>
    <Divider />
    <section aria-labelledby="next-p5">
      <h2 id="next-p5" data-text="heading-xl">{tProjects("projects.sections.next")}</h2>
      <ul class="case-psr">
        <li data-text="body-normal">{tP5("project_p5.next.item1")}</li>
        <li data-text="body-normal">{tP5("project_p5.next.item2")}</li>
        <li data-text="body-normal">{tP5("project_p5.next.item3")}</li>
      </ul>
    </section>
    <Divider />
    <section aria-labelledby="conversion-p5">
      <h2 id="conversion-p5" data-text="heading-xl">{tProjects("projects.sections.conversion")}</h2>
      <p data-text="body-normal">{tP5("project_p5.conversion.p")}</p>
      <div class="case-conversion">
        <a class="case-cta" href="https://wa.me/5548984586949" target="_blank" rel="noopener noreferrer">{tP5("project_p5.conversion.whatsapp")}</a>
        <a class="case-cta-secondary" href="mailto:victor.de.alcantara.bueno@gmail.com?subject=Solicita%C3%A7%C3%A3o%20de%20repo%20%2F%20demo%20(Relatorium)" rel="noopener noreferrer">{tCommon("common.cta.repo")}</a>
        <a class="case-cta-secondary" href={`${getRelativeLocaleUrl(locale, "")}#projects`}>{tProjects("projects.buttons.back")}</a>
        <a class="case-cta-secondary" href={getRelativeLocaleUrl(locale, "projects/p7")}>{tProjects("projects.buttons.next")}</a>
        <span data-text="ui-helper">{tP5("project_p5.conversion.availability")}</span>
      </div>
    </section>
  </div>
  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
